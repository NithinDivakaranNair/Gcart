    <script>
      // Get references to the input fields
      const priceInput = document.getElementById('Price');
      const offerPriceInput = document.getElementById('OfferPrice');
      const discountInput = document.getElementById('Discount');
  
      // Add event listeners to the "Price" and "OfferPrice" fields
      priceInput.addEventListener('input', updateDiscount);
      offerPriceInput.addEventListener('input', updateDiscount);
  
      // Function to update the "Discount" field
      function updateDiscount() {
          // Get the values from the "Price" and "OfferPrice" fields
          const price = parseFloat(priceInput.value);
          const offerPrice = parseFloat(offerPriceInput.value);
  
          // Calculate the discount percentage
          if (!isNaN(price) && !isNaN(offerPrice) && price > 0 && offerPrice > 0) {
              const discountPercentage = ((price - offerPrice) / price) * 100;
  
              // Update the "Discount" field with the calculated discount
              discountInput.value = parseInt(discountPercentage.toFixed(2));
          } else {
              // If either field is not a valid number or less than or equal to 0, clear the "Discount" field
              discountInput.value = '';
          }
      }
  </script>
  

