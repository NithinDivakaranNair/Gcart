                  </div>
                </div>
                <!-- cart -->
                
                <!-- summary -->
                <div class="col-lg-3">
                  <div class="card mb-3 border shadow-0" style="background-color: lightyellow;">
                    <div class="card-body" style="color: green;">
                      <form>
                        <div class="form-group">
                          <label class="form-label">Have coupon?</label>
                          <div class="input-group">
                            <input type="text" class="form-control border" name="" placeholder="Coupon code" />
                            <button class="btn btn-light border">Apply</button>
                          </div>
                        </div>
                      </form>
                    </div>
                  </div>
                 
                  <div class="card shadow-0 border" style="background-color: lightyellow;">
                  
                    <div class="card-body" style="color: green;">
                      <h6 class="mb-3">Price Details</h6>
                      <div class="d-flex justify-content-between">
                        <p class="mb-2" style="color: rgb(0, 0, 0);">Total price(<%=num %>iteams):</p>
                        <p class="mb-2" style="color: black; font-weight: bold;"><%= totalprice.toLocaleString('en-IN', { style: 'currency', currency: 'INR' })%></p>
                      </div>
                      <div class="d-flex justify-content-between">
                        <p class="mb-2" style="color: black;">Discount:</p>
                        <p class="mb-2 text-success" style="color: black; font-weight: bold;"><%= (20).toLocaleString('en-IN', { style: 'currency', currency: 'INR' }) %>
                        </p>
                      </div>
                    
                      <hr />
                      <div class="d-flex justify-content-between">
                        <p class="mb-2" style="color: black;">Total Amount:</p>
                        <p class="mb-2 fw-bold" style="color: black"; font-weight: bold;"><%= (totalprice-20).toLocaleString('en-IN', { style: 'currency', currency: 'INR' }) %>
                        </p>
                      </div>
                      
                      <div class="mt-3">
                        <a href="/checkoutpage" class="btn btn-success w-100 shadow-0 mb-2">CheckOut</a>
                        <!-- <a href="#" class="btn btn-light w-100 border mt-2">Back to shop</a> -->
                      </div>
                    </div>
                  </div>
                  
               
                </div>
                
                <!-- summary -->
              
            </div>
            </div>
