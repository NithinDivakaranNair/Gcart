                      <h4 class="card-title mb-4">Cart Iteams</h4>
             
            
   <!--start cart iteam-->
   <div class="container">
    
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Brand</th>
          <th>Image</th>
          <th>Model</th>
          
          <th>Description</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total Price</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% cartinfo.forEach(data => { %>
          <tr>
            <td>
              <a href="#" class="nav-link brand text-dark font-weight-bold"><%= data.Brand %></a>
            </td>
            <td>
              <img src="/uploads/<%= data.Image[0] %>" alt="<%= data.Model %> Image" class="img-fluid" />
            </td>
            <td>
              <a href="#" class="nav-link model text-dark font-weight-bold"><%= data.Model %></a>
            </td>
            
            <td>
              <p class="description text-muted"><%= data.Description %></p>
            </td>
            <td>
              <h6 class="text-dark"><%= data.Price %>/-</h6>
            </td>
            <td>
          <!-- + & - button  working place-->
              <div class="count-container">
                <% if(data.Count === 1){ %>
                  <button style="background-color: #ff0000; color: #ffffff;">-</button>
                <%}else{ %>
                  <a href="/CartMinusebutton/<%=data.ProdectId%>">
                    <button style="background-color: #ff0000; color: #ffffff;">-</button>
                  </a>
                <% } %>
                <span class="count" style="font-size: 16px; color: #333;"> <%= data.Count %></span>
                <a href="/CartPluseButton/<%=data.ProdectId%>">
                  <button style="background-color: #00ff00; color: #ffffff;">+</button>
                </a>
              </div>
              
          </td>
            <td>  
              <h5 class="text-dark"><%= data.Price*data.Count %>/-</h5>
            </td>
            <td>
              <a href="/IteamRemoveCart/<%= data.ProdectId %>" class="btn btn-primary">Remove</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  

          <!--end cart iteam-->
                    
        </div>
      
