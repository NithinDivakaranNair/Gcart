<!-- Header Section Begin -->
<header class="header">
    <div class="container-fluid">
      <div class="row">
        <div class="col-xl-2 col-lg-2">
          <div class="header__logo">
            <a href="../mainhomepage"><img src="/img/download.png" alt=""></a>
          </div>
        </div>
  
        <!-- Category Adding Space -->
        <div class="col-xl-6 col-lg-7">
          <nav class="header__menu">
            <ul>
              <% categoryinfo.forEach((data) => { %>
                <li><a href="/categorybasedrender/<%= data._id %>"><%= data.Category %></a></li>
                <!-- You can add dropdown items here if needed -->
              <% }) %>
            </ul>
          </nav>
        </div>
        <!-- End Category Adding Space -->
  
        <!-- Top Sidebar Start -->
        <div class="col-lg-3">
          <div class="header__right">
            <div class="container">
              <div class="row justify-content-center">
                <div class="col-lg-12">
                  <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="search-button">
                    <button class="btn btn-success" type="button" id="search-button">
                      <i class="search">search</i>
                    </button>
                  </div>
                </div>
              </div>
            </div>
  
            <ul class="header__right__widget">
              <li>
                <a href="#">
                  <span class="icon_heart_alt"></span>
                  <!-- You can add a notification badge here if needed -->
                </a>
              </li>
              <li>
                <a href="#">
                  <span class="icon_bag_alt"></span>
                  <!-- You can add a notification badge here if needed -->
                </a>
              </li>
              <li>
                <div x-data="{ open: false }" class="profile-pic" style="width: 30px; height: 30px;">
                  <div class="count-indicator" x-on:click="open = !open">
                    <img class="img-xs rounded-circle" src="assets1/images/faces/face15.jpg" alt="">
                    <!-- You can add a notification badge here if needed -->
                  </div>
                  <div class="profile-name" x-show="open">
                    <h6 class="mb-0 font-weight-normal">USER</h6>
                  </div>
                </div>
              </li>
              <li>
                <div class="header__right__auth">
                  <a href="/logout">Logout</a>
                </div>
              </li>
            </ul>
          </div>
        </div>
        <!-- Top Sidebar End -->
      </div>
      <div class="canvas__open">
        <i class="fa fa-bars"></i>
      </div>
    </div>
  </header>
  <!-- Header Section End -->
  